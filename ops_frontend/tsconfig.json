{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
			"@/*": ["./src/*"]
		},
    "types": [
      "pinia-plugin-persist"
    ]
},
  "include": ["src/**/*.ts", "src/**/*.d.ts","src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
